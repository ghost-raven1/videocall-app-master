# Django настройки
DEBUG=False
SECRET_KEY=your-super-secret-django-key-change-this-immediately-in-production

# База данных PostgreSQL
POSTGRES_DB=videocall_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-db-password-here
DB_PASSWORD=your-strong-db-password-here
DB_HOST=db
DB_PORT=5432

# Redis для сессий и WebSocket
REDIS_URL=redis://redis:6379/0

# Настройки приложения
ROOM_EXPIRY_HOURS=24
MAX_PARTICIPANTS_PER_ROOM=100
SHORT_CODE_LENGTH=6

# CORS настройки
CORS_ALLOWED_ORIGINS=https://video-call-ghost.ru,https://www.video-call-ghost.ru
ALLOWED_HOSTS=video-call-ghost.ru,www.video-call-ghost.ru,localhost,127.0.0.1

# SSL сертификаты (пути в системе)
SSL_CERT_PATH=/etc/letsencrypt/live/video-call-ghost.ru/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/video-call-ghost.ru/privkey.pem
DOMAIN_NAME=video-call-ghost.ru

# Frontend настройки (для разработки)
VITE_API_BASE_URL=https://video-call-ghost.ru/api
VITE_WS_BASE_URL=wss://video-call-ghost.ru
VITE_APP_NAME=VideoCall
